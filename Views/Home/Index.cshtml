@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Azure AD B2C Demo</h1>
    <p>Learn about building secure web applications with Azure Active Directory B2C authentication.</p>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="alert alert-success">
            <h4>✅ You are signed in!</h4>
            <p>Welcome back, @User.Identity?.Name!</p>
            <a asp-action="Profile" class="btn btn-primary">View Your Profile</a>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>🔐 Get Started</h4>
            <p>Sign in or create a new account to access secure features.</p>
            <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn" class="btn btn-primary">Sign In / Sign Up</a>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-4">
        <h3>🔒 Secure Authentication</h3>
        <p>Experience enterprise-grade security with Azure AD B2C, including multi-factor authentication and advanced threat protection.</p>
    </div>
    <div class="col-md-4">
        <h3>👤 User Management</h3>
        <p>Complete user lifecycle management with self-service registration, profile editing, and password reset capabilities.</p>
    </div>
    <div class="col-md-4">
        <h3>🛡️ Identity Protection</h3>
        <p>Built-in protection against identity attacks with risk-based conditional access and anomaly detection.</p>
    </div>
</div>